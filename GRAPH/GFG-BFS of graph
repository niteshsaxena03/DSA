class Solution {
  public:
    // Function to return Breadth First Traversal of given graph.
    vector<int> bfsOfGraph(int V, vector<int> adj[]) {
        vector<int>ans;
        if(V==0)return ans;
        unordered_map<int,bool>visited;
        queue<int>q;
        q.push(0);
        visited[0]=true;
        
        while(!q.empty()){
            int front=q.front();
            q.pop();
            
            visited[front]=true;
            ans.push_back(front);
            
            for(auto i:adj[front]){
                if(!visited[i]){
                    visited[i]=true;
                    q.push(i);
                }
            }
        }
        return ans;
    }
};
