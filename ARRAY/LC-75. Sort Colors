class Solution {
public:
    void bubblesort(vector<int>&arr,int n){
        if(n==0)return;

        for(int i=0;i<n-1;i++){
            if(arr[i]>arr[i+1])swap(arr[i],arr[i+1]);
        }
        bubblesort(arr,n-1);
    }

    void sortColors(vector<int>& nums) {
        bubblesort(nums,nums.size());
    }
};
