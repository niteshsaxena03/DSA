class Solution {
public:
    int firstMissingPositive(vector<int>& nums) {
        int n=nums.size();
        //changing all negatives
        for(int i=0;i<n;i++)if(nums[i]<=0)nums[i]=n+1;
        //making indexes negative where value are found other than required
        for(int i=0;i<n;i++)if(abs(nums[i])<=n && nums[abs(nums[i])-1]>0)nums[abs(nums[i])-1]*=-1;
        //finding the first positive missing
        for(int i=0;i<n;i++)if(nums[i]>0)return i+1;
        //returning next of last element
        return n+1;
    }
};
