class Solution {
public:
    void makezero(vector<vector<int>>& matrix,int row,int col,int i,int j){
         for(int r=0;r<row;r++){
             if(matrix[r][j]!=0)matrix[r][j]=INT_MAX-100;
         }
         for(int c=0;c<col;c++){
             if(matrix[i][c]!=0)matrix[i][c]=INT_MAX-100;
         }
    }
    void final(vector<vector<int>>& matrix,int row,int col){
        for(int i=0;i<row;i++){
            for(int j=0;j<col;j++){
                if(matrix[i][j]==INT_MAX-100)matrix[i][j]=0;
            }
        }
    }

    void setZeroes(vector<vector<int>>& matrix) {
        int row=matrix.size();
        int col=matrix[0].size();
        
        for(int i=0;i<row;i++){
            for(int j=0;j<col;j++){
                if(matrix[i][j]==0)makezero(matrix,row,col,i,j);
            }
        }
        final(matrix,row,col);
    }
};
