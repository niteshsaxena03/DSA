class Solution{
    public:
    int maxLen(vector<int>&A, int n)
    {   
       int len=0;
       int sum=0;
       unordered_map<int,int>k;
       for(int i=0;i<n;i++){
           sum+=A[i];
           if(sum==0)len=i+1;
           else if(k.find(sum)!=k.end())len=max(len,i-k[sum]);
           else k[sum]=i;
       }
       return len;
    }
};
