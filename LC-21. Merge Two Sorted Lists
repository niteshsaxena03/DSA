class Solution {
public:
    ListNode* mergeTwoLists(ListNode* list1, ListNode* list2) {
        vector<int>arr;
        ListNode* l1=list1;
        ListNode* l2=list2;
        ListNode* ans=NULL;
        while(l1!=NULL){
            arr.push_back(l1->val);
            l1=l1->next;
        }
        while(l2!=NULL){
            arr.push_back(l2->val);
            l2=l2->next;
        }
        sort(arr.rbegin(),arr.rend());
        for(int i=0;i<arr.size();i++){
            ans=new ListNode(arr[i],ans);
        }
        return ans;
    }
};
