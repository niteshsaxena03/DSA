class Solution {
private:
bool ispossible(vector<int>arr,int k,int mid){
    int sum=0;
    int count=1;
    int n=arr.size();
    for(int i=0;i<n;i++){
        if(sum+arr[i]<=mid){
            sum+=arr[i];
        }
        else{
            count++;
            if(count>k||arr[i]>mid)return false;
            sum=arr[i];
        }
        if(arr[i]>mid)return false;

        
    }
    return true;

}
public:
    int splitArray(vector<int>& nums, int k) {
        int s=0;
        int e=0;
        for(int i=0;i<nums.size();i++){
            e+=nums[i];
        }
        int mid=s+(e-s)/2;
        int ans=-1;
        while(s<=e){
            if(ispossible(nums,k,mid)){
                ans=mid;
                e=mid-1;
            }
            else s=mid+1;
            mid=s+(e-s)/2;
        }
        return ans;
    }
};
