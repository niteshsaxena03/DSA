class Solution {
public:
    int candy(vector<int>& ratings) {
        int n=ratings.size();
        int ans=n,i=1;

        while(i<n){
            //skipping duplicate number
            if(ratings[i]==ratings[i-1]){
                i++;
                continue;
            }
            //increasing slope
            int peak=0;
            while(ratings[i-1]<ratings[i]){
                peak++;
                ans+=peak;
                i++;
                if(i==n)return ans;
            }

            //decreasing slope
            int valley=0;
            while(i<n && ratings[i-1]>ratings[i]){
                valley++;
                ans+=valley;
                i++;
            }
        ans-=min(peak,valley);//removing lower peak
        }
     return ans;
    }
};
