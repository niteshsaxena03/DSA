class Solution {
public:
    void solve(Node* root){
        if(root==NULL)return;

        if(root->next){
            if(root->right)root->right->next=root->next->left;
        }
        if(root->left)root->left->next=root->right;

        solve(root->left);
        solve(root->right);
    }

    Node* connect(Node* root) {
        solve(root);
        return root;
    }
};
